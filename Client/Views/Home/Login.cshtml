@using BL
@model Models.ViewModel.LoginPageVm
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}
<script src="https://www.google.com/recaptcha/api.js?render=6Ldx-QEkAAAAAJTKJLW52m7T0CquyCfANBu0wg6I"></script>
<script>
    grecaptcha.ready(function () {
        grecaptcha.execute('6Ldx-QEkAAAAAJTKJLW52m7T0CquyCfANBu0wg6I', { action: 'Login' }).then(function (token) {
            $("#GoogleRecaptchaToken").val(token);
        });
    });
</script>


@using (Html.BeginForm())
{
    <form>
        <div class="form-group">
            <div class="form-label-group">
                @Html.EditorFor(model => model.AdminModel.Username, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "", @required = "required", @autofocus = "autofocus" } })
                <label for="AdminModel_Username">Username</label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-label-group">
                @Html.EditorFor(a => a.AdminModel.Password, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "", @required = "required", @autofocus = "autofocus" } })
                <label for="AdminModel_Password">Password</label>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    @Html.EditorFor(a => a.RememberMe)
                    Remember Me
                </label>
            </div>
        </div>

        @*<div class="g-recaptcha" data-sitekey="6Lc839AjAAAAAMgEcWN7RM6LqBzP83mywgc7ccLq"></div>*@
        @Html.HiddenFor(a => a.GoogleRecaptchaToken)

        <input type="submit" value="Enter" class="btn btn-primary btn-block" />

    </form>
    @*<div class="text-center">
            <a class="d-block small" href="~/Cpanel/Admin/Forget">@LangData.Get("Forget")</a>
        </div>*@
}